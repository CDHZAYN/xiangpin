<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tencent.wxcloudrun.dao.HRDao">

    <update id="setHRInfo">
        insert hr(open_id, `name`, avatar, gender, phone)
        values (#{openId}, #{name}, #{avatar}, #{gender}, #{phone});
    </update>

    <delete id="deleteByOpenId">
        delete from hr where open_id=#{openId};
    </delete>

    <select id="getByOpenId" resultMap="HRTable">
        select * from hr where open_id=#{openId};
    </select>

    <select id="getOpenId" resultType="java.lang.String">
        select open_id from hr where open_id=#{openID};
    </select>


</mapper>