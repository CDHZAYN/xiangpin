<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tencent.wxcloudrun.dao.SeekerDao">

    <resultMap id="seekerPO" type="com.tencent.wxcloudrun.model.po.SeekerPO">
        <id column="seekerId" property="openID"/>
        <result column="seekerName" property="name"/>
        <result column="seekerPhone" property="phone"/>
        <result column="seekerOld" property="old"/>
        <result column="seekerEducation" property="education"/>
        <result column="seekerBirth" jdbcType="DATE" property="birth" javaType="java.sql.Date"/>
        <result column="seekerGender" property="gender"/>
    </resultMap>

    <insert id="setSeekerInfo" parameterType="com.tencent.wxcloudrun.model.po.SeekerPO">
        insert into seekersTable value (#{openID}, #{name}, #{phone}, #{old},
                                        #{education}, #{birth,jdbcType=DATE,javaType=java.sql.Date},
                                        #{gender});
    </insert>

    <insert id="setSeekerLoginInfo" parameterType="com.tencent.wxcloudrun.model.po.LoginPO">
        insert into loginTable value (#{userName}, #{userAvatar}, #{openID});
    </insert>

</mapper>