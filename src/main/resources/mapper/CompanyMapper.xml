<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tencent.wxcloudrun.dao.HRDao">
    <insert id="register" parameterType="com.tencent.wxcloudrun.model.po.CompanyPO" useGeneratedKeys="true"
            keyProperty="id">
        insert into company(full_name, short_name, industry, avatar, license, scale, finance, intro, pos_id, website,
                            position)
            value (#{fullName}, #{shortName}, #{industry}, #{avatar}, #{license}, #{scale}, #{finance}, #{intro},
                   #{posID}, #{website}, #{position});
    </insert>

    <select id="getProfile" resultMap="CompanyPO">
        select full_name, avatar, industry, finance, keywords
        from company
        where keywords = #{id};
    </select>

    <resultMap id="CompanyPO" type="com.tencent.wxcloudrun.model.po.CompanyPO">
        <id column="id" property="id"/>
        <result column="full_name" property="fullName"/>
        <result column="short_name" property="shortName"/>
        <result column="industry" property="industry"/>
        <result column="avatar" property="avatar"/>
        <result column="license" property="license"/>
        <result column="scale" property="scale"/>
        <result column="finance" property="finance"/>
        <result column="intro" property="intro"/>
        <result column="pos_id" property="posID"/>
        <result column="website" property="website"/>
        <result column="position" property="position"/>
        <result column="keywords" property="keywords"/>
    </resultMap>

</mapper>